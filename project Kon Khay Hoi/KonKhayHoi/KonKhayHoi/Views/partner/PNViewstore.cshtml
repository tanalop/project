@model Tuple<List<KonKhayHoi.Models.Shop>>
<!DOCTYPE HTML>
<html lang="en">
<head>
    <title>Kon Khay Hoi</title>
    <meta charset="UTF-8">
    <link rel="shortcut icon" type="image/x-icon" href="~/bootstrap/style/images/konKhayHoi.png">
    <link rel="stylesheet" type="text/css" href="~/bootstrap/style/css/style.css" media="all">
    <link href='http://fonts.googleapis.com/css?family=Amaranth' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,400italic,700,700italic' rel='stylesheet' type='text/css'>

    <script src="~/bootstrap/style/js/jquery-1.6.4.min.js"></script>
    <script src="~/bootstrap/style/js/ddsmoothmenu.js"></script>
    <script src="~/bootstrap/style/js/jquery.jcarousel.js"></script>
    <script src="~/bootstrap/style/js/jquery.prettyPhoto.js"></script>
    <script src="~/bootstrap/style/js/carousel.js"></script>
    <script src="~/bootstrap/style/js/jquery.flexslider-min.js"></script>
    <script src="~/bootstrap/style/js/jquery.masonry.min.js"></script>
    <script src="~/bootstrap/style/js/jquery.slickforms.js"></script>
</head>
@using (Html.BeginForm())
{
    <body>
        <div id="wrapper">
            <div id="sidebar">
                <div id="logo"><img src="style/images/logo.png"></div>
                <div id="menu" class="menu-v">
                    <ul>
                        <li><a href="datafarm.html" class="active">ข้อมูลฟาร์ม</a></li>
                        <li><a href="profile.html" class="active">แก้ไขข้อมูลส่วนตัว</a></li>
                        <li><a href="viewRevenue.html" class="active">รายได้</a></li>
                        <li><a href="viewExpenditure.html" class="active">รายจ่าย</a></li>
                        <li><a href="CheckProfit.html" class="active">ตรวจสอบกำไร</a></li>
                        <li><a href="Circulation.html" class="active">ตรวจสอบยอดขาย</a></li>
                        <li><a href="ViewPN.html" class="active">เพิ่ม แก้ไข(หุ้นส่วน)</a></li>
                        <li><a href="Viewstore.html" class="active">ดูข้อมูลร้านรับซื้อ</a></li>
                        <li><a href="changPassword.html" class="active">เปลี่ยนรหัสผ่าน</a></li>
                        <li><a href="../main/main.php" class="active">ออกจากระบบ</a></li>
                    </ul>
                </div>
            </div>

            <div id="content">
                <font color="#fffff">  <h5 class="title">สวัสดี คุณหอยแครง  ทะเลไทย</h5></font>
                <div class="line"></div>
                <div class="container-fluid">



                    <div class="animated fadeIn">
                        <div class="card-header">
                            <strong><img src="~/bootstrap/style/images/viewS.png"></strong>

                        </div>

                        <div class="row">
                            <div class="col-sm-12">

                                <div class="card">
                                    <div style="width:100%; height:450px; overflow-y: scroll; scrollbar-arrow-color:blue; scrollbar-face-color: #e7e7e7; scrollbar-3dlight-color: #a0a0a0; scrollbar-darkshadow-color:#888888">
                                        <div class="card-block">
                                            <table>
                                                <tr>
                                                    <th width=14%><center>ชื่อฟาร์ม</th>
                                                    <th width=10%><center>บ้านเลขที่</th>
                                                    <th width=10%><center>ตำบล</th>
                                                    <th width=15%><center>อำเภอ</th>
                                                    <th width=15%><center>จังหวัด</th>
                                                    <th width=13%><center>โทร</th>
                                                    <th width=15%><center>จำนวนที่รับซื้อ(ตัน)</th>
                                                </tr>

                                                @foreach (var item in Model.Item1)
                                                {
                                                    <tr>
                                                        <td>@Html.DisplayFor(modelItem => item.S_name)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.S_no)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.S_subD)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.S_sub)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.S_sub)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.S_tel)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.purchasedAmount)</td>

                                                    </tr>

                                                }
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clear"></div>
                    <script src="~/bootstrap/style/js/scripts.js"></script>
                    <!--[if !IE]> -->
                    <script src="~/bootstrap/style/js/jquery.corner.js"></script>
    </body>
}
</html>

