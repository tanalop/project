<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="CoreUI Bootstrap 4 Admin Template">
    <meta name="author" content="Lukasz Holeczek">
    <meta name="keyword" content="CoreUI Bootstrap 4 Admin Template">
    <!-- <link rel="shortcut icon" href="assets/ico/favicon.png"> -->
    <title>Kon Khay Hoi</title>
    <!-- Icons -->
    <link href="~/bootstrap/style/css/simple-line-icons.css" rel="stylesheet">
    <!-- Main styles for this application -->
    <link href="~/bootstrap/style/css/style.css" rel="stylesheet">
</head>
@using (Html.BeginForm())
{
<body class="app flex-row align-items-center">
    @Html.AntiForgeryToken()
    <div class="container">
        
            <div class="col-md-8">
                <div class="card-group mb-0">
                    <div class="card p-4">
                        <div class="card-block">
                            <h1>เข้าสู่ระบบ</h1>
                            <br>
                            <div class="input-group mb-3">
                                <span class="input-group-addon">
                                    <i class="icon-user"></i>
                                </span>
                                <input type="text" class="form-control"  required="required" name="username" placeholder="ชื่อผู้ใช้">
                            </div>
                            <div class="input-group mb-4">
                                <span class="input-group-addon">
                                    <i class="icon-lock"></i>
                                </span>
                                <input type="password" class="form-control" required="required" name="password" placeholder="รหัสผ่าน">
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <input class="btn btn-primary px-4" type="submit" value="เข้าสู่ระบบ" />
                                    
                                </div>
                                
                                    <div class="col-6 text-right">
                                        <button type="button" class="btn btn-link px-0">ลืมรหัสผ่าน</button>
                                    </div>
                                </div>
                            <font size="3" color="red">@ViewBag.Message</font>
                        </div>
                    </div>
                    <div class="card card-inverse card-primary py-5 d-md-down-none" style="width:44%">
                        <div class="card-block text-center">
                            <div>
                                
                                 <img src="~/bootstrap/style/images/addfarm.png"  onclick="location.href='@Url.Action("dataFarm", "farm")';">
                                <a href="addshop.html"><img src="~/bootstrap/style/images/addshop.png"></a><br>
                                <center><img src="~/bootstrap/style/images/hoi.pn"></center>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 
    <!-- Bootstrap and necessary plugins -->
    <script src="bower_components/jquery/dist/jquery.min.js"></script>
    <script src="bower_components/tether/dist/js/tether.min.js"></script>
    <script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

</body>
}
</html>